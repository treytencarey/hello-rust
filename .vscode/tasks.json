    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and run rust-lua-bind",
            "type": "shell",
            "command": "cargo run -p rust-lua-bind",
            "problemMatcher": []
        },
        {
            "label": "Build and run hello",
            "type": "shell",
            "command": "cargo run hello",
            "options": {
                "env": {
                    "LUA_LIB": "${workspaceFolder}/../lua-5.4.6/src",
                    "LUA_LIB_NAME": "lua",
                    "LUA_LINK": "static"
                }
            },
            "problemMatcher": [],
            "dependsOn": ["Build and run rust-lua-bind"]
        }
    ]
}